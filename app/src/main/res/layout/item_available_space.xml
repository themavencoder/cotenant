<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="8dp"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="wrap_content"

        android:id="@+id/apartmentImage"
        android:layout_height="wrap_content"
        android:src="@drawable/defaultimage"
        />

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:paddingTop="4dp"
            android:textColor="#777777"
            android:layout_gravity="end"
            android:id="@+id/bedroomNumber"
            android:text="2 BEDROOMS"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="1dp"
            android:layout_gravity="top"
            android:layout_marginLeft="4dp"
            android:src="@drawable/dot"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:paddingTop="4dp"
            android:textColor="#777777"
            android:layout_gravity="end"
            android:id="@+id/stateLocation"
            android:text="Yaba"
            />



    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"

        android:id="@+id/addressLocation"

        android:text="42 Montgomery street, Yaba"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NGN 50 000"
            android:id="@+id/rent"
            android:textColor="#A9CF46"
            android:textStyle="bold"
            android:textSize="20sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/PER MONTH"
            android:textSize="12sp"
            />



    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:textColor="#A9CF46"
        android:background="@drawable/btn_white"
        android:text="Details"
        android:paddingRight="28dp"
        android:paddingLeft="24dp"
        android:drawableRight="@drawable/front_arrow"

        />

</LinearLayout>