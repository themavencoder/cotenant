<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="48dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        android:text="Setup a security for your app"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginBottom="14dp"
        android:text="Please enter a 4-digit pin"
        android:textSize="12sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E0E0E0"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        android:text="New PIN"
        android:textSize="18sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        >


        <EditText
            android:id="@+id/confirmeditText_firstcode"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:editable="false"
            android:hint="0"
            android:inputType="phone"
            android:singleLine="true" />
        <EditText
            android:id="@+id/confirmeditText_secondcode"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:editable="false"
            android:hint="0"
            android:layout_marginLeft="4dp"
            android:inputType="phone"
            android:singleLine="true" />
        <EditText
            android:id="@+id/confirmeditText_thirdcode"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:editable="false"
            android:hint="0"
            android:layout_marginLeft="4dp"
            android:inputType="phone"
            android:singleLine="true" />
        <EditText
            android:id="@+id/confirmeditText_fourthcode"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:editable="false"
            android:layout_marginLeft="4dp"
            android:hint="0"
            android:inputType="phone"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/confirmpositivechecked"
            android:visibility="visible"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/positivechecked"/>



    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E0E0E0"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="4dp"
        android:text="Confirm PIN"
        android:textSize="18sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        >


        <EditText
            android:id="@+id/editText_firstcode"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:editable="false"
            android:hint="0"
            android:inputType="phone"
            android:singleLine="true" />
        <EditText
            android:id="@+id/editText_secondcode"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:editable="false"
            android:hint="0"
            android:layout_marginLeft="4dp"
            android:inputType="phone"
            android:singleLine="true" />
        <EditText
            android:id="@+id/editText_thirdcode"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:editable="false"
            android:hint="0"
            android:layout_marginLeft="4dp"
            android:inputType="phone"
            android:singleLine="true" />
        <EditText
            android:id="@+id/editText_fourthcode"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:editable="false"
            android:layout_marginLeft="4dp"
            android:hint="0"
            android:inputType="phone"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/positivechecked"
            android:visibility="visible"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/positivechecked"/>



    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"

        android:background="@color/regButtonColor"
        android:text="Finish"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</LinearLayout>
