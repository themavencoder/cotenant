<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.getmobileltd.cotenant">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".registration.phonenumbermvp.EnterPhoneNumberActivity"
            android:theme="@style/AppTheme.NoActionBar" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".registration.entercodemvp.EnterCodeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".registration.phonenumbermvp.EnterPhoneNumberActivity" />
        </activity>
        <activity
            android:name=".registration.AboutYou"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".registration.AppPin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dashboard.DefaultDashboard"
            android:label="Dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mergedashboard.MergedDashboard"
            android:label="Dashboard">

        </activity>
        <activity
            android:name=".interest.InterestActivity"
            android:label="Interest"></activity>
        <activity android:name=".history.HistoryActivity"></activity>
        <activity android:name=".payment.SetUpCard"></activity>
        <activity android:name=".navdrawer.NavigationActivity">



        </activity>
    </application>

</manifest>